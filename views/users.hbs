{{>header}}
{{>navbar}}


<div class="container-fluid" id="gallery-container" style="text-align: center;">
{{#each users}}
        <div class="col-lg-2 col-md-3 col-sm-4 col-xs-12 gallery-elem" style="text-align: center; min-height: 35em; width: 25em; background-color: black">
                <h1>{{this.firstname}} {{this.lastname}}</h1>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{#if this.picture}}
                    <img style="max-height: 300px; border: 3px solid white; max-width: 20em;" src="/static/uploads/{{ this.picture }}" alt="nopictureyet">
                {{else if this.auth42}}
                    <img style="max-height: 300px; border: 3px solid white; max-width: 20em;" src="{{ this.auth42.picture }}" alt="nopictureyet">
                {{/if}}
            </div>
        </div>
{{/each}}
</div>


{{>footer}}
<script src="/static/js/search.js"></script>
