extends layout

block content
    if type === 'Gallery' && movies
        each elem in movies
            a(href='/gallery/single/'+elem._id)
                h1 #{elem.title}
                p #{elem.imdb_id}
                | #{elem.synopsis}
                each genre in elem.genres
                    p #{genre}
                img(src=elem.picture.banner)
    else if movie && type === 'One'
        h1 #{movie.title}
        p #{movie.imdb_id}
        p #{movie.synopsis}
        each genre in movie.genres
            p #{genre}
        p #{movie.rating}
        img(src=movie.picture.banner)
        img(src=movie.picture.poster)
        img(src=movie.picture.back)
        p #{movie.torrents.en['1080p'].url}
        iframe(width="420", height="315", src=movie.trailer)
        form(method='POST', action='/movie/download')
            input(type='hidden', name='torrent', value=movie.torrents.en['1080p'].url)
            button(type='submit') ðŸŽ¥

        //.test
        //    input.imdb(type='hidden', name='Imdb', value=movie.imdb_id)
        //    input.mag(type='hidden', name='Mag', value=movie.torrents.en['1080p'].url)
        //    input.lol(type='submit', name='torrent', value=[movie.imdb_id ,movie.torrents.en['1080p'].url])
        //    button.lol(type="submit", value=[movie.imdb_id, movie.torrents.en['1080p'].url]) test
        .large
            h1 Load An mp4 file
            input#the-video-file-field(type='file')
            #data-vid.large-8.columns
            h2#name-vid
            p#size-vid
            p#type-vid

        form(method="POST", action='/movie/subtitle/get')
            input(type='text', placeholder='fr'
            input(type='hidden', name='imdb', value=movie.imdb_id)
            button(type='submit') Add Subtitles

        .video
            video#video(data-id=movie.imdb_id, data-magnet=movie.torrents.en['1080p'].url ,controls='', preload='auto')
                source(src='http://localhost:3000/tmp/Silicon Cowboys (2016) [1080p] [YTS.AG]/Silicon.Cowboys.2016.1080p.BluRay.x264-[YTS.AG].mp4', type='video/mp4')
            button.lol(type='submit')
